@model GestaoOS.Models.Sala

@{
    ViewData["Title"] = "Create";
    var salas = ViewData["SalasCadastradas"] as List<Sala>;
}
    <p class="titlePage"><img class="big icon" src="/Assets/gps.png" alt="Icone"> Gerenciamento de Salas</p>
    <p class="descrption">Cadastre e gerencie as salas da organização</p>

@if (TempData["Success"] != null)
{
    <div>@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div>@TempData["Error"]</div>
}

<section class="mainPage">
    <article class="box">
        <p><img class="icon" src="/Assets/add.png" alt="Icone"> Cadastrar nova Sala</p>
        <p class="descrption">Preencha os dados da nova sala</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="msgAlert"></div>

            <div class="inputs">
                <label asp-for="Nome">Nome da Sala</label>
                <input asp-for="Nome" placeholder="Ex: Sala 101" />
                <span asp-validation-for="Nome" class="msgAlert"></span>
            </div>
            <div class="inputs">
                <label asp-for="Bloco">Bloco</label>
                <input asp-for="Bloco" maxlength="1" />
                <span asp-validation-for="Bloco" class="msgAlert"></span>
            </div>
            <div class="inputs">
                <label asp-for="ResponsavelId">Responsável</label>
                <select asp-for="ResponsavelId" asp-items="ViewBag.ResponsavelId">
                    <option value="">-- Nenhum --</option>
                </select>
            </div>
            <div class="inputs">
                <label asp-for="Descricao">Descrição</label>
                <textarea asp-for="Descricao"></textarea>
                <span asp-validation-for="Descricao"></span>
            </div>

            <input class="submit" type="submit" value="Cadastrar">
        </form>
    </article>
    <article class="box">
        <p>Salas Cadastradas</p>
        <p class="descrption">@salas?.Count Salas(s) registrada(s)</p>

        <form action="Filter">
            <div style="display: flex; gap: 10px">

            <input type="text" placeholder="Buscar Salas..." name="texto">
            <input class="submit" type="submit" value="Filtrar">
                <a asp-action="Create" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
        

        <div class="rooms">
            @if (salas != null)
            {
                foreach (var item in salas)
                {
                    <a asp-action="Gerenciar" asp-controller="Ativos" asp-route-salaId="@item.Id">
                        <div class="room">
                            <div class="optionsRoom">
                                <p>@item.Nome</p>
                            </div>

                            <p class="descrption dRoom">Bloco @item.Bloco</p>
                            <p class="descrption typeName">@item.Descricao</p>
                            <p class="descrption responsavel">Responsável: @item.Responsavel?.Nome</p>
                        </div>
                    </a>
                }
            }
        </div>
    </article>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
