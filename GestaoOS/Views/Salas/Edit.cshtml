@model GestaoOS.Models.Sala

@{
    ViewData["Title"] = "Editar Sala";
}

<h1>Editar Sala</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bloco" class="control-label"></label>
                <input asp-for="Bloco" class="form-control" maxlength="1" />
                <span asp-validation-for="Bloco" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ResponsavelId" class="control-label">Responsável pela Sala</label>
                <select asp-for="ResponsavelId" class="form-control" asp-items="ViewBag.ResponsavelId">
                    <option value="">-- Nenhum --</option>
                </select>
                <span asp-validation-for="ResponsavelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}