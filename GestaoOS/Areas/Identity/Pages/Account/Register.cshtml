@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<main style="margin-top: 300px; margin-bottom: 100px">
    <img style="width: 300px; margin-bottom: 30px;" src="~/Assets/senai.png" alt="Logo Senai">

    <h1>Sistema de Manutenção</h1>
    <p class="descrption descrptionBig">Crie sua conta para começar</p>

    <article class="card">
        <p>Registrar</p>
        <p class="descrption">Preencha os campos para criar uma conta</p>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="inputs">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" placeholder="Seu nome completo" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <div class="inputs">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" placeholder="seu@email.com" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="inputs">
                <label asp-for="Input.RoleSelecionada"></label> @* O DisplayName virá do InputModel *@
                <select asp-for="Input.RoleSelecionada" asp-items="@Model.RolesDisponiveis">
                    <option value="">-- Selecione um Perfil --</option>
                </select>
                <span asp-validation-for="Input.RoleSelecionada" class="text-danger"></span>
            </div>

            <div class="inputs">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" placeholder="" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="inputs">
                <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                <input asp-for="Input.ConfirmPassword" placeholder="" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
          

            <button id="registerSubmit" type="submit" class="submit">Registrar</button>

            <div class="login-links">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Já tem uma conta? Faça login</a>
                </p>
            </div>
        </form>
    </article>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}